<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.monia.grupomatch.MojeGrupy2"
    tools:layout_editor_absoluteY="81dp">


    <TextView
        android:id="@+id/zmiennaprzedmiot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zmiennaprzedmiot"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="37dp" />

    <TextView
        android:id="@+id/czlonkowieText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/czlonkowieText"
        tools:layout_editor_absoluteX="157dp"
        tools:layout_editor_absoluteY="97dp" />

    <TextView
        android:id="@+id/notatkiText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notatkiText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="315dp" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="368dp"
        android:layout_height="221dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="84dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/zmiennaczlonek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="@string/zmiennaczlonek"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="0dp" />
        </LinearLayout>

    </ScrollView>

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="384dp"
        android:layout_height="125dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="341dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/zmiennanotatka"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="klik"
                android:text="@string/zmiennanotatka"
                tools:layout_editor_absoluteX="113dp"
                tools:layout_editor_absoluteY="377dp" />
        </LinearLayout>
    </ScrollView>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="33dp"
        android:layout_height="68dp"
        android:fillViewport="true"
        tools:layout_editor_absoluteX="335dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </android.support.v4.widget.NestedScrollView>

    <Button
        android:id="@+id/opuscBtn"
        android:layout_width="383dp"
        android:layout_height="wrap_content"
        android:text="@string/opuscBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="466dp" />

</android.support.constraint.ConstraintLayout>
